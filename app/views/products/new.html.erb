<% provide(:title,'Product registration')%>
<h1>Product registration</h1>
<div class= "container">
    <div class="col-md-6 col-md-offset-3">
    <%= form_with model: @product, url: products_path do |form| %>
    
        <!--エラー出力-->
        <% if form.object.errors.any? %>
            <div id="error_explanation">
                <div class="alert alert-danger">
                    <%= pluralize(@product.errors.count, "error") %>
                    <ul>
                        <% form.object.errors.full_messages.each do |message|  %>
                        <li><%= message %></li>
                        <% end  %>
                    </ul>
                </div>
            </div>
        <% end %>
        <!--入力フォーム-->  
        <%= form.label :product_name %>
        <%= form.text_field :product_name, placeholder: "商品名" %>
        
        <%= form.label :tax_excluded_price%>
        <%= form.number_field :tax_excluded_price,placeholder: "税抜き価格" %>
        
        <%= form.label :description %>
        <%= form.text_field :description, placeholder: "商品説明"%>
        
        <!--品物カテゴリ-->
        <!--大項目-->
        <%= form.label :article_id %>
        <%= form.select :article_id, Product.enum_options_for_select(:article_id), {prompt: "選択してください"}, class: "prefecture-select"%>

        <!--中項目-->
        <%= form.label :article_category_name %>
        <%= form.collection_select(:article_category_id,ArticleCategory.all,:id,:article_category_name,{prompt: "選択してください"},class:"prefecture-select")%>


        <!--鑑定書-->
        <%= form.label :appraisal_document_name %>
        <%= form.collection_select(:appraisal_document_id,AppraisalDocument.all,:id,:appraisal_document_name,{prompt: "選択してください"},class:"prefecture-select")%>

        <!--国-->
        <%= form.label :country_name %>
        <%= form.collection_select(:country_id,Country.all,:id,:country_name,{prompt: "選択してください"},class:"prefecture-select")%>

        <!--時代-->
        <%= form.label :era %>
        <%= form.collection_select(:era_id,Era.all,:id,:era_name,{prompt: "選択してください"},class:"prefecture-select")%>
        <!--銘-->
        <%= form.label :sign_person %>
        <%= form.collection_select(:sign_id,Sign.all,:id,:sign_person,{prompt: "選択してください"},class:"prefecture-select")%>
       
        <!--販売ステータス-->
        <%= form.label :sales_status %>
        <%= form.select :sales_status, Product.enum_options_for_select(:sales_status), {prompt: "選択してください"}, class: "prefecture-select"%>

        <%= form.submit%>
        <% end %>
    </div>
</div>

