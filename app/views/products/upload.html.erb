<div class="row row-cols-1 row-cols-md-3 g-4">
<% @products.each do |product| %>
    <div class="col">
        <div class="card h-100">
            <%= image_tag product.image.url, size: '300x230', class:'card-img-top object-fit-cover' %>
            <div class="card-body">
                <small class="muted-text"><%= l(product.created_at, format: :long) %></small>
                <h5 class="card-title mt-3"><%= link_to product.title, product %></h5>
                <div class="card-footer text-end">
                <%= link_to "Show", product_path(product), class: 'btn btn-secondary' %>
                </div>
            </div>
        </div>
    </div>
    <% end %>
</div>